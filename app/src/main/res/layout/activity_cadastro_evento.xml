<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CadastroEventoActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_idadePublico2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/alata"
                android:text="@string/txt_esporte"
                android:paddingLeft="7dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_idadePublico" />

            <EditText
                android:id="@+id/et_nome_evento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_nome_evento"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoGeral" />

            <CheckBox
                android:id="@+id/cb_evento_pago"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/campo_evento"
                android:fontFamily="@font/alata"
                android:text="Evento Ã© pago?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDescricaoEvento" />


            <EditText
                android:id="@+id/et_data_evento"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_data_evento"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_evento_pago" />

            <EditText
                android:id="@+id/et_horario_evento"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_horario_inicial_evento"
                android:inputType="time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_data_evento" />

            <EditText
                android:id="@+id/et_horario_final"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_horario_final_evento"
                android:inputType="time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/et_horario_evento"
                app:layout_constraintTop_toBottomOf="@+id/et_data_evento" />

            <EditText
                android:id="@+id/et_capacidade_maxima"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_capacidade_maxima"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_capacidade_minima"
                app:layout_constraintTop_toBottomOf="@+id/et_horario_final" />

            <EditText
                android:id="@+id/et_capacidade_minima"
                android:layout_width="180dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_capacidade_minima"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_horario_evento" />

            <EditText
                android:id="@+id/etNumero"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/txt_numero"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etCidade" />

            <EditText
                android:id="@+id/etCep"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/txt_cep"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoEndereco" />

            <Button
                android:id="@+id/btnVerificaCep"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/verde_escuro"
                android:fontFamily="@font/alata"
                android:text="@string/verifica_cep"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/etCep"
                app:layout_constraintTop_toBottomOf="@+id/infoEndereco" />

            <Spinner
                android:id="@+id/spnEstados"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:dropDownWidth="match_parent"
                android:entries="@array/array_estados"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etCep" />

            <EditText
                android:id="@+id/etBairro"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/txt_bairro"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spnEstados" />

            <EditText
                android:id="@+id/etEndereco"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/txt_endereco"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etBairro" />

            <EditText
                android:id="@+id/etCidade"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/txt_cidade"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEndereco" />


            <TextView
                android:id="@+id/txt_intuitoEvento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/alata"
                android:text="Intuito do Evento:"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoFinais" />

            <Spinner
                android:id="@+id/spn_intuito"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:entries="@array/intuito_event"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_intuitoEvento"
                app:layout_constraintTop_toBottomOf="@+id/infoFinais" />

            <TextView
                android:id="@+id/txt_idadePublico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/alata"
                android:text="@string/txt_intuito_do_evento"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_intuitoEvento" />

            <Spinner
                android:id="@+id/spn_idade_publico"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:entries="@array/idade_public"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_idadePublico"
                app:layout_constraintTop_toBottomOf="@+id/spn_intuito" />

            <Button
                android:id="@+id/btnAdicionarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/verde_escuro"
                android:text="@string/btn_escolher_foto"
                app:cornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_idadePublico2" />

            <Button
                android:id="@+id/btnCadastrarEvento"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/verde_mar"
                android:text="@string/btn_cadastrar_evento"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imvFotoCriaEvento"
                app:layout_constraintVertical_bias="1.0"
                app:rippleColor="@color/verde_escuro" />

            <EditText
                android:id="@+id/etDescricaoEvento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:fontFamily="@font/alata"
                android:paddingLeft="7dp"
                android:hint="@string/hint_descricao_evento"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_nome_evento" />

            <Spinner
                android:id="@+id/spnEsportes"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/campo_evento"
                android:entries="@array/esportes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txt_idadePublico2"
                app:layout_constraintTop_toBottomOf="@+id/spn_idade_publico" />

            <ImageView
                android:id="@+id/imvFotoCriaEvento"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="18dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/btnAdicionarFoto"
                app:layout_constraintTop_toBottomOf="@+id/spnEsportes"
                app:srcCompat="@drawable/__removebg_preview"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/et_preco_evento"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/campo_evento"
                android:ems="10"
                android:paddingLeft="7dp"
                android:fontFamily="@font/alata"
                android:hint="@string/hint_preco_inscricao"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_evento_pago"
                app:layout_constraintTop_toBottomOf="@+id/etDescricaoEvento" />

            <TextView
                android:id="@+id/infoGeral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="@string/topico_info_geral"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infoEndereco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="@string/topico_endereco"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_capacidade_minima" />

            <TextView
                android:id="@+id/infoFinais"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/topico_info_final"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNumero" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>